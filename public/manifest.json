{
  "manifest_version": 3,
  "name": "YouTube Score Analyzer",
  "version": "0.1.0",
  "description": "영상의 인기도를 점수로 계산해 보여줍니다.",
  "permissions": ["storage"],
  "host_permissions": ["https://www.youtube.com/*"],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/",
        "https://www.youtube.com/results*"
      ],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "options_page": "options.html"
}
